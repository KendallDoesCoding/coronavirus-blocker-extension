{
    "manifest_version": 2,
    "name": "Coronavirus Blocker",
    "description": "This extension is for all the people who want to get Covid, Coronavirus out of their life, trust me we all do!",
    "version": "4.0.1",
    "icons": {"128": "images/icon_128.png"},
        "browser_action": {
        "default_icon": "images/icon_128.png",
        "default_popup": "/ui/popup.html"
    },
    "permissions": ["activeTab"],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "exclude_matches": [
                "*://www.google.com/*",
                "*://github.com/*"
            ],
            "js": ["script.js"]
        }
    ]
}
